{% extends "backend/admin_base.twig" %}

{% block content %}

    <p>Редактор</p>

    <ul>
        <table class="admin_cat_table table table-striped table-hover">
            <tr>
                <td>Главная</td>
                <td><a href="{{ base_url }}adminpages/redGeneral"><span class="glyphicon glyphicon-pencil"></span></a></td>
                <td></td>
