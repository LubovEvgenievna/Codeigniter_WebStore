        {% endfor %}

        <div class="ref_form_div">
            <form action="admin_panel" method="post">
                <p>
                    <label for="login">E-mail</label>
                    <input type="text" name="login" id="login" placeholder="E-mail" class="form-control">
                </p>
                <p>
                    <label for="password">Пароль</label>
                    <input type="password" name="password" id="password" placeholder="Пароль" class="form-control">
                </p>
                <div class="btn_enter">
                    <input type="submit" name="submit" value="Войти" class="btn product-btn">
                </div>
            </form>
        </div>
        </div>
    </div>
</div>
</body>
