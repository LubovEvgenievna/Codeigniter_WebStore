{% extends "frontend/base.twig" %}

{% block content %}

    <div class="container">
    <div class="list_of_hits">
        <div class="content_bg"></div>

        <H1>Активация</H1>
        <div class="content-line"></div>

        {% for errors in errors %}
            <div class="errors_div">
                <p>{{ errors }}</p>
            </div>
        {% endfor %}

        <div class="ref_form_div">
            <form action="#" method="post">
                <p>
                    <label>E-mail:</label><br />
                    <input type="text" name="email" value="{{ users_data.email }}" class="form-control"/>
                </p>
                <p class="form_btn">
                    <input type="submit" name="submit" value="Активировать" class="btn product-btn"/>
                </p>
            </form>
        </div>
    </div>
    </div>
{%  endblock %}